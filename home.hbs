{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{#page}}
{{!-- Everything inside the #post block pulls data from the page --}}

{{#match @custom.publication_cover_style "!=" "None"}}
    <div class="site-header-content" {{#match @custom.publication_cover_style "Large"}} large{{/match}}>
        {{#if @site.cover_image}}
            {{!-- This is a responsive image, it loads different sizes depending on device
            https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
            <img class="site-header-cover"
                srcset="{{img_url @site.cover_image size="s"}} 300w,
                        {{img_url @site.cover_image size="m"}} 600w,
                        {{img_url @site.cover_image size="l"}} 1000w,
                        {{img_url @site.cover_image size="xl"}} 2000w"
                sizes="100vw"
                src="{{img_url @site.cover_image size="xl"}}"
                alt=""
            />
        {{/if}}
        <h1 class="site-title">
            {{#if @site.logo}}
                <img class="site-logo" src="{{img_url @site.logo size="m"}}" alt="{{@site.title}}" />
            {{else}}
                {{@site.title}}
            {{/if}}
        </h1>
        <p class="site-description">{{@site.description}}</p>
    </div>
{{/match}}

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="inner posts">

        <section class="gh-content gh-canvas gh-home">

            <h1 class="article-title">{{title}}</h1>

            {{content}}

        </section>

        <h2>Fresh off the press</h2>

        <div class="post-feed">

            {{#get "posts" limit="4" include="authors,tags"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            {{/get}}

        </div>

        <div class="home-section">
            <a href="posts">More latest stories ➡</a>
        </div>

        <h2>Straight from the heart</h2>

        <div class="post-feed">

            {{#get "posts" filter="tag:personal" limit="4" include="authors"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            {{/get}}

        </div>

        <div class="home-section">
            <a href="tag/personal">More personal stories ➡</a>
        </div>

        <h2>Bits and bytes</h2>

        <div class="post-feed">

            {{#get "posts" filter="tag:technology" limit="4" include="authors"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            {{/get}}

        </div>

        <div class="home-section">
            <a href="tag/technology">More technology stories ➡</a>
        </div>

        <h2>Game on</h2>

        <div class="post-feed">

            {{#get "posts" filter="tag:sports" limit="4" include="authors"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            {{/get}}

        </div>

        <div class="home-section">
            <a href="tag/sports">More sports stories ➡</a>
        </div>

        <h2>Shaping our world</h2>

        <div class="post-feed">

            {{#get "posts" filter="tag:society" limit="4" include="authors"}}
                {{#foreach posts}}
                    {{> "post-card"}}
                {{/foreach}}
            {{/get}}

        </div>

        <div class="home-section">
            <a href="tag/society">More society stories ➡</a>
        </div>

    </div>
</main>

{{/page}}
